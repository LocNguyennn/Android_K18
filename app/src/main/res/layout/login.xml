<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/line1"
        android:layout_width="84dp"
        android:layout_height="1dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="24dp"
        android:background="#B3B3B3"
        app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="84dp"
        android:layout_height="1dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="24dp"
        android:background="#B3B3B3"
        app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="sign in with"
        android:textAlignment="center"
        android:textColor="#5B5B5E"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFacebook"
        android:layout_width="139.26dp"
        android:layout_height="54dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/sign_up_btn"
        android:letterSpacing="0.05"
        android:paddingLeft="50dp"
        android:paddingRight="14.26dp"
        android:stateListAnimator="@null"
        android:text="FACEBOOK"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoogle"
        android:layout_width="139.26dp"
        android:layout_height="54dp"
        android:layout_marginRight="37.74dp"
        android:layout_marginBottom="28dp"

        android:background="@drawable/sign_up_btn"
        android:letterSpacing="0.05"
        android:paddingLeft="50dp"
        android:paddingRight="31.26dp"
        android:stateListAnimator="@null"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="98.64dp"
        android:layout_marginBottom="11.3dp"
        app:layout_constraintBottom_toBottomOf="@id/btnFacebook"
        app:layout_constraintLeft_toLeftOf="@id/btnFacebook"
        app:layout_constraintRight_toRightOf="@id/btnFacebook"
        app:layout_constraintTop_toTopOf="@+id/btnFacebook"
        app:srcCompat="@drawable/fb_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="98.65dp"
        android:layout_marginBottom="12.38dp"
        app:layout_constraintBottom_toBottomOf="@id/btnGoogle"
        app:layout_constraintLeft_toLeftOf="@id/btnGoogle"
        app:layout_constraintRight_toRightOf="@id/btnGoogle"
        app:layout_constraintTop_toTopOf="@id/btnGoogle"
        app:srcCompat="@drawable/gg_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="36.41sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eMailTextInput"
        android:layout_width="324dp"
        android:layout_height="65dp"
        android:hint="email"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="26dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        app:boxStrokeColor="#FE724C"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:shapeAppearance="?attr/shapeAppearanceSmallComponent"
        android:enabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:layout_width="324dp"
            android:layout_height="65dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="#9796A1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="324dp"
        android:layout_height="65dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="5dp"
        android:enabled="true"
        android:hint="email"

        app:boxStrokeColor="#FE724C"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:passwordToggleEnabled="true"
        app:shapeAppearance="?attr/shapeAppearanceSmallComponent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:baselineAligned="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textSize="16sp"
        android:textColor="#9796A1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/eMailTextInput"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin_LoginPage"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#FE724C"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textAlignment="center"
        android:letterSpacing="0.08" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:textColor="#5B5B5E"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="79dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin_LoginPage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp_loginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:text="Sign Up"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:textAllCaps="false"
        android:textColor="#FE724C"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin_LoginPage"
        app:layout_constraintLeft_toRightOf="@id/textView6" />
    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:fontFamily="@font/Sofia_Pro_Medium_Az"
        android:textColor="#FE724C"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLogin_LoginPage"
        />
    
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/btn_back"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintLeft_toLeftOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="@id/btnBack"
        />


</androidx.constraintlayout.widget.ConstraintLayout>