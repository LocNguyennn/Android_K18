<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/item_view_frame"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:src="@drawable/otp_unselected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/otp_unselected" />

        <TextView
            android:id="@+id/txtMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name of Movie"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="100dp"
            android:singleLine="true"
            android:scrollHorizontally="true" />

        <TextView
            android:id="@+id/txtMovieDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtMovieName"
            app:layout_constraintLeft_toRightOf="@id/imgMovie"
            android:layout_marginLeft="100dp"
            android:hint="Description"
            android:textSize="14sp"
            android:textColor="#5B5B5E"
            android:layout_marginTop="65dp"
            android:singleLine="true"
            android:scrollHorizontally="true" />
    </RelativeLayout>
</layout>