<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="#B3B3B3"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_3" />

        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:text="Sign Up"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtFullNameTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:enabled="true"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeColor="#FE724C"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:shapeAppearance="?attr/shapeAppearanceSmallComponent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFullName"
                android:layout_width="324dp"
                android:layout_height="60dp"
                android:fontFamily="@font/sofia_pro_medium_az"
                android:text="@string/full_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPasswordTextInput"
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:layout_constraintStart_toStartOf="@+id/edtEmailTextInput"
            app:layout_constraintTop_toBottomOf="@+id/edtEmailTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#FE724C"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:passwordToggleEnabled="true"
            app:shapeAppearance="?attr/shapeAppearanceSmallComponent"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="324dp"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:fontFamily="@font/sofia_pro_medium_az"
                android:text="@string/password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtEmailTextInput"
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:layout_constraintStart_toStartOf="@+id/edtFullNameTextInput"
            app:layout_constraintTop_toBottomOf="@+id/edtFullNameTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#FE724C"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:shapeAppearance="?attr/shapeAppearanceSmallComponent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="324dp"
                android:layout_height="60dp"
                android:fontFamily="@font/sofia_pro_medium_az"
                android:text="@string/email"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="Full Name"
            app:layout_constraintStart_toStartOf="@+id/edtFullNameTextInput"
            app:layout_constraintTop_toBottomOf="@+id/textSignUp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="E-mail"
            app:layout_constraintBottom_toTopOf="@+id/edtEmailTextInput"
            app:layout_constraintStart_toStartOf="@+id/edtEmailTextInput" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="Password"
            app:layout_constraintBottom_toTopOf="@+id/edtPasswordTextInput"
            app:layout_constraintStart_toStartOf="@+id/edtPasswordTextInput" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_bg"
            android:text="Sign Up"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordTextInput" />


        <LinearLayout
            android:id="@+id/btnLogin_SignUpPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Already have an account?"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/login"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="5dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sofia_pro_medium_az"
            android:text="Sign up with"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin_SignUpPage" />


        <View
            android:id="@+id/view2"
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:layout_marginEnd="26dp"
            android:background="#B3B3B3"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintEnd_toStartOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFacebook"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/sign_up_btn"
            android:letterSpacing="0.05"
            android:paddingLeft="50dp"
            android:paddingRight="14.26dp"
            android:stateListAnimator="@null"
            android:text="FACEBOOK"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="98.64dp"
            android:layout_marginBottom="11.3dp"
            app:layout_constraintBottom_toBottomOf="@id/btnFacebook"
            app:layout_constraintLeft_toLeftOf="@id/btnFacebook"
            app:layout_constraintRight_toRightOf="@id/btnFacebook"
            app:layout_constraintTop_toTopOf="@+id/btnFacebook"
            app:srcCompat="@drawable/fb_icon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogle"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:layout_marginRight="37.74dp"
            android:layout_marginBottom="28dp"

            android:background="@drawable/sign_up_btn"
            android:letterSpacing="0.05"
            android:paddingLeft="50dp"
            android:paddingRight="31.26dp"
            android:stateListAnimator="@null"
            android:text="GOOGLE"
            android:textColor="#000000"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="98.65dp"
            android:layout_marginBottom="12.38dp"
            app:layout_constraintBottom_toBottomOf="@id/btnGoogle"
            app:layout_constraintLeft_toLeftOf="@id/btnGoogle"
            app:layout_constraintRight_toRightOf="@id/btnGoogle"
            app:layout_constraintTop_toTopOf="@id/btnGoogle"
            app:srcCompat="@drawable/gg_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>