<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    >

    <ImageView
        android:id="@+id/background"
        android:layout_width="1019dp"
        android:layout_height="1034dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome_background"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1019dp"
        android:layout_height="1034dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_blur" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="544dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="292.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/round_border"
        android:fontFamily="@font/Sofia_Pro_Semi_Bold_Az"
        android:text="Skip"
            android:textAllCaps="false"
        android:textColor="#FE724C"
        android:textSize="14sp"
        app:rippleColor="#ED4A4A"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/welcome_to_"
        android:layout_width="315dp"
        android:layout_height="173dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:lineSpacingExtra="15sp"
        android:text="@string/welcome_to_n_foodhub"
        android:textColor="#111719"
        android:textSize="53sp"
        android:translationY="-7.56sp"
        tools:layout_editor_absoluteX="30px"
        tools:layout_editor_absoluteY="121dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/your_favour"
        android:layout_width="266dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="351dp"
        android:alpha="0.87"
        android:gravity="top"
        android:lineSpacingExtra="9sp"
        android:text="Your favourite foods delivered fast at your door."
        android:textColor="#111719"
        android:textSize="18dp"
        android:translationY="-4.5sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/sign_in_wit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="536dp"
        android:fontFamily="@font/Sofia_Pro_Bold_Az"
        android:gravity="center_horizontal|top"
        android:text="sign in with"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/facebookLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="544dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/FB" />

    <ImageView
        android:id="@+id/googleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="544dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/GG" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"


        android:layout_marginLeft="96dp"
        android:layout_marginTop="684dp"
        android:fontFamily="@font/Sofia_Pro_Bold_Az"
        android:gravity="center_horizontal|top"
        android:text="@string/already_have_an_account_sign_in"
        android:textSize="14dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"

        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/round_border"
        android:fontFamily="@font/Sofia_Pro_Semi_Bold_Az"
        android:text="Start with email or phone"
        android:textAllCaps="false"
        android:textColor="#FE724C"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#ED4A4A" />




</androidx.constraintlayout.widget.ConstraintLayout>


