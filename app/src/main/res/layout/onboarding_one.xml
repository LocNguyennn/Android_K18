<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img"
        android:layout_width="373dp"
        android:layout_height="388dp"
        android:layout_marginLeft="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="146dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/txtOrder"
        android:layout_width="336dp"
        android:layout_height="86dp"
        android:fontFamily="@font/Sofia_Pro_Bold_Az"
        android:gravity="center"
        android:text="@string/orderText"
        android:textColor="#5B5B5E"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <View
        android:id="@+id/line"
        android:layout_width="19dp"
        android:layout_height="3dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/line"
        app:layout_constraintLeft_toLeft0f="parent"
        app:layout_constraintRight_tORight0f="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/el2"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/elipse2"
        app:layout_constraintLeft_toLeft0f="parent"
        app:layout_constraintRight_tORight0f="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/el1"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/elipse1"
        app:layout_constraintLeft_toLeft0f="parent"
        app:layout_constraintRight_tORight0f="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLight"
        android:layout_width="336dp"
        android:layout_height="54dp"

        android:fontFamily="@font/Sofia_Pro_Light_Az"
        android:gravity="center"
        android:text="@string/lightText"
        android:textColor="#5B5B5E"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <View
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="608dp"
        android:background="@drawable/button_right"
        app:layout_constraintLeft_toLeft0f="parent"
        app:layout_constraintRight_tORight0f="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>