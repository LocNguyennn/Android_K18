<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOrder"
        android:layout_width="336dp"
        android:layout_height="86dp"
        android:fontFamily="@font/sofia_pro_bold_az"
        android:gravity="center"
        android:text="@string/orderText"
        android:textColor="#5B5B5E"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/el2"
        app:layout_constraintVertical_bias="0.084" />

    <View
        android:id="@+id/line"
        android:layout_width="25dp"
        android:layout_height="5dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <View
        android:id="@+id/el2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/elipse2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/el1"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <View
        android:id="@+id/el1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/elipse1"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <TextView
        android:id="@+id/txtLight"
        android:layout_width="336dp"
        android:layout_height="54dp"

        android:layout_marginTop="23dp"
        android:fontFamily="@font/sofia_pro_light_az"
        android:gravity="center"
        android:text="@string/lightText"
        android:textColor="#5B5B5E"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOrder"
        app:layout_constraintVertical_bias="0.038" />

    <View
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLight" />


</androidx.constraintlayout.widget.ConstraintLayout>